<%- include ('partials/landingheader') %>
        <div class="signin-form"  class="container" style="text-align: center">
             <div class="signin-content">
                 <div style="width:30%; margin: 0 auto;" >
                          <header style="text-align: center">
                            <h1 class="form-title" > Login</h1>
                            <h4>You're today's host!</h4> 
                          </header>
                            <form action="/login" method="POST">
                                <div class="form-group">
                                    <label for="username"></label>
                                    <input  class="form-control" type="text" name="username" placeholder="Username" class="required">
                                </div>
                                <div  class="form-group">
                                    <label for="password"></label>
                                    <input  class="form-control" type="password" name="password" placeholder="password" class="required">
                                </div>
                                <div class="form-group form-button">
                                        <button value="login" class="btn btn-lg btn-success">Login</button>               
                                </div> 
                            </form> 
                </div>
            </div>
      </div>        

    <script
